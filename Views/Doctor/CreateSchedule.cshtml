@model DAL.Data.DoctorSchedule

<h2>Create Schedule</h2>

<form asp-action="CreateSchedule" method="post">
    <input type="hidden" asp-for="DoctorID" /> <!-- Hidden DoctorID field -->

    <div class="form-group">
        <label asp-for="ScheduleDay"></label>
        @Html.DropDownList("ScheduleDay", new SelectList(ViewBag.Days, "Key", "Value"), new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label asp-for="TimeSlot"></label>
        @Html.DropDownList("TimeSlot", new SelectList(ViewBag.TimeSlots, "Key", "Value"), new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label asp-for="MaxPatients"></label>
        <input asp-for="MaxPatients" type="number" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Schedule</button>
    <a asp-action="ManageSchedule" class="btn btn-secondary">Cancel</a>
</form>
