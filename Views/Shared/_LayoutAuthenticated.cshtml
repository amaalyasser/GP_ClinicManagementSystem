<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic_Managment_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinic_Managment_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            margin: 0;
            padding: 0;
        }

        .content {
            flex: 1;
        }

        .footer {
            background-color: #343a40;
            color: white;
            position: relative;
            bottom: 0;
            width: 100%;
            padding: 20px 0;
        }

        /* Fix spacing issues at the bottom */
        .container-fluid img {
            max-height: 50px;
        }

        .social-icons a {
            margin-right: 10px;
            color: white;
        }

            .social-icons a:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Clinic Logo" class="d-inline-block align-text-top">
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clinic Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav ms-auto d-flex align-items-center">
                        <!-- Flex container for vertical alignment -->
                        <a asp-controller="Account" asp-action="Profile" class="nav-link text-white">
                            <i class="fas fa-user-circle"></i> Profile
                        </a>
                        <div class="vr mx-2"></div> <!-- Vertical divider with spacing -->
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link text-white" style="padding: 0;">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

    </header>

    <!-- Main Content -->
    <div class="container content mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>About Us</h5>
                    <p>Our clinic is dedicated to providing top-quality care with a highly skilled medical team. We use cutting-edge technology to offer the best services.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light">facebook</a></li>
                        <li><a href="#" class="text-light">twitter</a></li>
                        <li><a href="#" class="text-light">instagram</a></li>
                        <li><a href="#" class="text-light">whatsapp</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-map-marker-alt"></i> 123 Main Street, City, Country</li>
                        <li><i class="fas fa-phone-alt"></i> +1 (555) 123-4567</li>
                        <li><i class="fas fa-envelope"></i> info@clinic.com</li>
                    </ul>
                    <div class="d-flex social-icons">
                        <a href="#" class="text-light"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                &copy; 2024 - Clinic Management System | <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
